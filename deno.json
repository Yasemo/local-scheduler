{
    "tasks": {
        "start": "deno run --allow-net --allow-env --allow-read --env-file=.env scheduler.ts",
        "dev": "deno run --watch --allow-net --allow-env --allow-read --env-file=.env scheduler.ts"
    },
    "compilerOptions": {
        "lib": [
            "deno.window"
        ],
        "strict": true
    },
    "fmt": {
        "useTabs": false,
        "lineWidth": 100,
        "indentWidth": 4,
        "semiColons": true,
        "singleQuote": false,
        "proseWrap": "preserve"
    },
    "lint": {
        "rules": {
            "tags": [
                "recommended"
            ]
        }
    }
}